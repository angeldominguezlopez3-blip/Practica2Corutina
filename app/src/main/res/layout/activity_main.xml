<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#9B8B8B"
    tools:context=".MainActivity">

    <!-- Timer en esquina superior izquierda -->

    <!-- Círculo para selección de galería en el centro -->

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/timer_initial"
        android:textSize="100sp"
        android:textStyle="bold"
        tools:text="00" />

    <ImageView
        android:id="@+id/imageViewGallery"
        android:layout_width="240dp"
        android:layout_height="301dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_background"
        android:clickable="true"
        android:contentDescription="@string/gallery_image_description"
        android:focusable="true"
        android:importantForAccessibility="yes"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_add_photo" />

    <!-- Botones en la parte inferior -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginBottom="50dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStart"
            style="@style/Widget.Material3.Button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="@string/start_button"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:background="#4CAF50"
            android:textColor="@color/black"
            app:backgroundTint="#62D013" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEnd"
            style="@style/Widget.Material3.Button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="@string/end_button"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:background="#F01818"
            android:textColor="@color/black"
            app:backgroundTint="#F44336" />

    </LinearLayout>

</RelativeLayout>